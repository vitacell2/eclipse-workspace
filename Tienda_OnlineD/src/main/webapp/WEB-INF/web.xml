<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>AltaProductoServlet</servlet-name>
  	<display-name>AltaProductoServlet</display-name>
  	<description></description>
  	<servlet-class>com.curso.mercado.web.AltaProductoServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>com.curso.mercado.web.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ListaProductosServlet</servlet-name>
  	<display-name>ListaProductosServlet</display-name>
  	<description></description>
  	<servlet-class>com.curso.mercado.web.ListaProductosServlet</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
  	<servlet-name>VentasServlet</servlet-name>
  	<display-name>VentasServlet</display-name>
  	<description></description>
  	<servlet-class>com.curso.mercado.web.VentasServlet</servlet-class>
  	<load-on-startup>3</load-on-startup>
  </servlet>
  <servlet>
  	<servlet-name>BorrarServlet</servlet-name>
  	<display-name>BorrarServlet</display-name>
  	<description></description>
  	<servlet-class>com.curso.mercado.web.BorrarServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AltaProductoServlet</servlet-name>
  	<url-pattern>/alta</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AltaProductoServlet</servlet-name>
  	<url-pattern>/altaproducto</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ListaProductosServlet</servlet-name>
  	<url-pattern>/listaProductos</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>VentasServlet</servlet-name>
  	<url-pattern>/comprar</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>BorrarServlet</servlet-name>
  	<url-pattern>/borrar</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  	<welcome-file>login.jsp</welcome-file>
  	<welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
